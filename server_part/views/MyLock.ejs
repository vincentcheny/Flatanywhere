    function addLock(type, SLID, info, num, icon, func, showStore, st, et){
      var $newLock;

      if (arguments.length == 9) {
        $newLock = $('<div><img><div><a></a><a></a></div><input><input></div>');
        $newLock.children("div").children("a").eq(1).attr({
          'id': 'addstore'+num,
          'class': 'showInStoreTap',
          'onclick': "toggleStore('"+SLID+"', "+showStore+", '"+st+"', '"+et+"')"
        });
        $newLock.children("div").children("a").eq(1).html((showStore==true?"Hide from":"Show in") + " Store");
      } else {
        $newLock = $('<div><img><div><a></a></div><input><input></div>');
      }
      if (type == 0) {
        classType = "freeDiv";
      } else if (type == 1) {
        classType = "occupiedDiv";
      } else if (type == 2) {
        classType = "availableDiv";
      }
      // image + info(nickname) + SLID
      $newLock.filter("div").eq(0).attr({
        'id': 'div'+num,
        'class': 'col-xs-6 col-sm-4 col-md-3 col-lg-2 img-group ' + classType
      });

      $newLock.children("img").attr({
        'id': 'SLIDid'+num,
        'src': './images/' + icon,
        'alt': 'Lock',
        'onclick': 'toggleDropDown('+num+')',
        'style': "cursor: pointer;",
        'width': '128',
        'height': '128',
        'align': 'center'
      });
      $newLock.children("div").attr({
        'id': 'dropdown'+num,
        'class': 'dropdown-content'
      });
      $newLock.children("div").children("a").eq(0).attr({
        'id': 'showqr'+num,
        'onclick': func
      });
      $newLock.children("div").children("a").eq(0).html("Show QR-code");

      $newLock.children("input").eq(0).attr({
        'id': 'infoid'+num,
        'class': 'info img-tip',
        'value': info,
        'readonly': 'readonly'
      });
      $newLock.children("input").eq(1).attr({
        'id': 'SLIDid'+num,
        'value': SLID,
        'class': 'hidden'
      });
      // console.log($newLock[0]);
      $("#lock-list").append($newLock);
    }
    function dateFormat(time, addDay){
      time = new Date(time.getTime() + 24*60*60*1000*addDay);
      //格式化日，如果小于9，前面补0
      var day = ("0" + time.getDate()).slice(-2);
      //格式化月，如果小于9，前面补0
      var month = ("0" + (time.getMonth() + 1)).slice(-2);
      //拼装完整日期格式
      var date = time.getFullYear()+"-"+(month)+"-"+(day) ;
      return date;
    }
    function toggleStore(SLID, showStore, st, et){
      $('#self_store').val(sessionStorage.userAccount);
      $('#SLIDid_store').val(SLID);
      if (showStore==false) {
        if (st == '') {
          // $newLine = $('<button type="button" name="button" onclick="newDateSubmit">Submit</button>');
          // $("#newDate").append($newLine);
          $("#newDate").removeClass("hidden");
          $('#stid').val(dateFormat(new Date(), 0));
          $('#etid').val(dateFormat(new Date(), 30));//默认有效期至30天后
          alert("Please input the available time period and submit it!");
        } else {
          $('#stid').val(dateFormat(new Date(st), 0));
          $('#etid').val(dateFormat(new Date(et), 0));
          $('#hsid_store').val(3);
          $("form").submit();
        }
      } else {
        if (st == '') {
          alert("Error: Try to hide(Already in store) but start_time undefined!");
        } else {
          // 不能早于当前最后的一个 deal 的 check_out_time
          if (sessionStorage.LastCheckOutTime == undefined) {
            // 没有待完成的 Deal
            $("#stid").val(NULL);
            $("#etid").val(NULL);
          } else {
            // 有待完成的 Deal
            $("#stid").val(dateFormat(new Date(sessionStorage.LastCheckInTime), 0));
            $("#etid").val(dateFormat(new Date(sessionStorage.LastCheckOutTime), 0));
          }
          $('#hsid_store').val(4);
          $("form").submit();
        }
      }
    }
    function toggleDropDown(num){
      for (var i = 0; i < sessionStorage.numOfLocks; i++) {
        if (num == i) {
          continue;
        }
        $('#dropdown'+i)[0].classList.remove("show");
      }
      $('#dropdown'+num)[0].classList.toggle("show");

    }
    function newDateSubmit(num) {
      var stdate = $('#stid').val();
      var eddate = $('#etid').val();
      if (stdate == "" || eddate == "") {
        alert("Lack of start date or end date!");
        return ;
      } else if (new Date(stdate) >= new Date(eddate)) {
        alert("Start date should be greater than end date!");
        return ;
      }
      $('#hsid_store').val(3);
      $("form").submit();
    }
    function Unlock(num, userAccount){
      $("#qrimg").empty();
      $("body").append("<div id='mask'></div>");
      $("#mask").addClass("mask").fadeIn("slow");
      $("#LoginBox").fadeIn("slow");
      var qrcode = new QRCode2.default($('#qrimg')[0], {
            width: 200,
            height: 200
          });
      qrcode.clear();
      qrcode.makeCode(userAccount);
      return ;
      Flatanywhere.unlock.sendTransaction(sessionStorage.userAccount, {from: sessionStorage.userAccount}, function(err, result){
        if (!err) {
          console.log("Unlock Successfully!");
        } else {
          console.error(err);
        }
      });
    }
    function showType(className){
      $(".img-group").not(className).fadeOut(500);
      setTimeout(function(){
        $(".img-group").not(className).addClass("hidden");
        $(".img-group"+className).fadeIn(500);
        $(".img-group"+className).removeClass("hidden");
      }, 500);
    }
    function selectType(num){
      if (num == 0) {
        showType(".freeDiv");
      } else if (num == 1) {
        showType(".occupiedDiv");
      } else if (num == 2) {
        showType(".availableDiv");
      } else {
        // show ALL
        $(".img-group").fadeOut(500);
        setTimeout(function(){
          $(".img-group").removeClass("hidden");
          $(".img-group").fadeIn(500);
        }, 500);
      }
    }
